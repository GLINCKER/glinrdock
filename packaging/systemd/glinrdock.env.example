# GlinrDock Environment Configuration
# Copy this file to /etc/glinrdock/glinrdock.env and customize as needed

# HTTP Server Configuration
GLINRDOCK_HTTP_ADDR=:8080

# Data Storage Configuration
GLINRDOCK_DATA_DIR=/var/lib/glinrdock/data

# Logging Configuration
GLINRDOCK_LOG_LEVEL=info
GLINRDOCK_LOG_FORMAT=json

# Configuration File Path
GLINRDOCK_CONFIG_FILE=/etc/glinrdock/config.toml

# Authentication
ADMIN_TOKEN=change-this-secure-token-now

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock

# Optional: TLS Configuration
# GLINRDOCK_TLS_CERT_FILE=/etc/glinrdock/server.crt
# GLINRDOCK_TLS_KEY_FILE=/etc/glinrdock/server.key

# Optional: Database Configuration
# GLINRDOCK_DATABASE_URL=sqlite:///var/lib/glinrdock/data/glinrdock.db

# Optional: Performance Tuning
# GLINRDOCK_MAX_WORKERS=4
# GLINRDOCK_REQUEST_TIMEOUT=30s